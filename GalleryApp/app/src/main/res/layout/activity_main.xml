<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#6F009688"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Lab1.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.Lab1.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/tvKeysSearch"
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="-2dp"
        android:background="#7f000000"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="italic" />

    <view
        android:id="@+id/recyclerView"
        class="androidx.recyclerview.widget.RecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="99dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical">

    </view>

    <Button
        android:id="@+id/btnTakePicture"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="94dp"
        android:background="@android:drawable/ic_menu_camera"
        android:backgroundTint="#9F009688"
        android:ellipsize="middle"
        android:src="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/btnTakeVideo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="28dp"
        android:background="@android:drawable/ic_menu_slideshow"
        android:backgroundTint="#9F009688"
        android:ellipsize="middle"
        android:src="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/btnTakeAudio"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="360dp"
        android:layout_marginBottom="29dp"
        android:background="@android:drawable/ic_btn_speak_now"
        android:backgroundTint="#9F009688"
        android:ellipsize="middle"
        android:src="@android:drawable/ic_input_add" />

    <fragment
        android:id="@+id/fragment"
        android:name="pl.edu.pwr.lab23.i236764.fragment.DeleteInfoFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="371dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="2dp"
        android:background="@android:drawable/ic_search_category_default" />

</RelativeLayout>
